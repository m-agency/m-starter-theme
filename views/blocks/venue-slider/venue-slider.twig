<section {{ anchor }} class="relative z-0 venue-slider splide bg-med-blue text-white py-12 lg:pt-32 lg:pb-48 {{ attributes.className }}">
	{% if fields.heading %}
		<div class="relative gap-8 mb-12 text-center wrapper sm:mb-24 z-2">
			<h2 class="h2">{{ fields.heading}}</h2>
		</div>
	{% endif %}

	<div class="splide__track">
		<ul class="splide__list">
			{% for venue in get_posts(fields.venues) %}
				<li class="flex items-stretch splide__slide justify-stretch">
					<div class="relative flex flex-col w-full overflow-hidden border rounded-lg splide__inner lg:flex-row lg:items-stretch border-secondary bg-primary">
						<div class="flex order-2 py-8 lg:items-center lg:py-20 xl:py-24 2xl:py-32 lg:order-1 lg:basis-1/2">
							<div class="text-sm text-white md:text-base">
								<h3 class="px-6 mb-4 h3 lg:px-8 2xl:px-10">
									{{ venue.title }}
								</h4>

								<div class="flex flex-col gap-2 px-6 mb-4 lg:px-8 2xl:px-10">
									{% if venue.square_feet %}
										<div>
											<strong class="uppercase">{{ __('Square Feet:', 'magency-theme') }}&nbsp;</strong>
											<span>{{ venue.square_feet }}</span>
										</div>
									{% endif %}

									{% if venue.capacity %}
										<div>
											<strong class="uppercase">{{ __('Capacity:', 'magency-theme') }}&nbsp;</strong>
											<span>{{ venue.capacity }}</span>
										</div>
									{% endif %}

									{% if venue.features %}
										<div>
											<strong class="uppercase">{{ __('Features:', 'magency-theme') }}&nbsp;</strong>
											<span>{{ venue.features }}</span>
										</div>
									{% endif %}
								</div>

								<div class="px-6 overflow-auto wysiwyg max-h-96 lg:px-8 2xl:px-10 sm:text-lg">
									{{ venue.excerpt }}
								</div>
							</div>
						</div>

						<div class="relative flex items-center justify-center order-1 h-64 bg-dark-gray lg:h-auto lg:order-2 lg:basis-1/2">
							<span class="h4">Image coming soon...</span>
							{{ get_image_html(venue.thumbnail.id, 'object-cover size-full absolute inset-0') }}
						</div>
					</div>
				</li>
			{% endfor %}
		</ul>
	</div>

	<div class="flex items-center justify-between mt-8 wrapper">
		<ul class="splide__pagination"></ul>

		<div class="relative text-right splide__arrows">
			<button class="p-3 m-1 transition-colors duration-300 border rounded-full border-secondary hover:bg-secondary splide__arrow splide__arrow--prev">
				<svg width="24" height="24" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M20 11H7.83L13.42 5.41L12 4L4 12L12 20L13.41 18.59L7.83 13H20V11Z" fill="white"/>
				</svg>
			</button>
			<button class="p-3 m-1 transition-colors duration-300 border rounded-full border-secondary hover:bg-secondary splide__arrow splide__arrow--next">
				<svg width="24" height="24" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M12 4L10.59 5.41L16.17 11H4V13H16.17L10.59 18.59L12 20L20 12L12 4Z" fill="white"/>
				</svg>
			</button>
		</div>
	</div>
</section>
