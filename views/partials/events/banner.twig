<section id="interior-banner" class="relative py-32 sm:py-40 md:py-48 lg:py-52 xl:py-56 z-10 bg-dark-blue">
	{% if post.thumbnail %}
		{{ get_image_html(
      post.thumbnail.id,
      'z-0 absolute size-full inset-0 object-cover opacity-50 sm:opacity-70'
    ) }}
	{% endif %}

	<div class="bg-med-blue/70 z-5 absolute inset-0 size-full"></div>

	<div class="wrapper relative z-15">
		<div class="max-w-2xl text-center items-center mx-auto flex flex-col gap-4 sm:gap-2">
			<h2 class="text-white h2">
				{{ post.title }}
			</h2>

			{% if post.excerpt %}
				<div class="wysiwyg text-white">
					{{ post.excerpt }}
				</div>
			{% endif %}

			<div class="btn-group flex items-center flex-wrap gap-4 mt-8">
				<a class="btn btn-primary" href="#learn-more" title="{{ __('Learn More', 'magency-theme') }}">
					{{ __('Learn More', 'magency-theme') }}
				</a>
			</div>
		</div>
	</div>
</section>
